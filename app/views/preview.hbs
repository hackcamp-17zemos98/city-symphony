<div class="app" data-src="{{id}}">
    <section class="canvas">
        <div class="video-background">
            {{#each videos}}
                <video loop>
                    <source src="{{mp4}}" type="video/mp4">
                    <source src="{{webm}}" type="video/webm">
                </video>
            {{/each}}
        </div>

        <footer>
            <div class="video-info clearfix">

            </div>

        <div class="action clearfix">
            <div class="create">
                <a class="button" href="/">Create your own symphony</a>
            </div>
        </div>
        </footer>

    </section>

    <audio class="audio-slots"></audio>
    <audio class="audio-ambient" loop></audio>
</div>